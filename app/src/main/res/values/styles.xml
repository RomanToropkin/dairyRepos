<resources>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="DairyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:textColorPrimary">@color/textIcons</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/DairyTheme.ButtonStyle</item>
        <item name="android:fontFamily">@font/sf_regular</item>
    </style>

    <style name="DairyTheme.TitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DairyTheme.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_light</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="DairyTheme.TextAreaStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/tv_border_bg</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/textIcons</item>
    </style>

    <style name="DairyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DairyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
